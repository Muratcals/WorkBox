<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".view.FilmDetayFragment"
    android:background="@color/black">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/detayImage"
                    android:layout_width="200dp"
                    android:layout_height="300dp"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="10dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/topgun" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/detayFilmAdi"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="ali ata bak"
                        android:layout_marginEnd="5dp"
                        android:textSize="18sp"
                        android:layout_marginTop="25dp"
                        android:textColor="@color/white"
                        android:layout_marginStart="8dp"/>

                    <TextView
                        android:id="@+id/detayFilmYonetmen"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="ali ata bak"
                        android:layout_marginEnd="5dp"
                        android:textSize="18sp"
                        android:layout_marginTop="25dp"
                        android:textColor="@color/white"
                        android:layout_marginStart="8dp"/>
                    <TextView
                        android:id="@+id/detayFilmImdb"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="ali ata bak"
                        android:layout_marginEnd="5dp"
                        android:textSize="18sp"
                        android:layout_marginTop="25dp"
                        android:textColor="@color/white"
                        android:layout_marginStart="8dp"/>
                    <TextView
                        android:id="@+id/detayFilmtarih"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="ali ata bak"
                        android:layout_marginEnd="5dp"
                        android:textSize="18sp"
                        android:layout_marginTop="25dp"
                        android:textColor="@color/white"
                        android:layout_marginStart="8dp"/>
                    <TextView
                        android:id="@+id/detayFilmSure"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="ali ata bak"
                        android:layout_marginEnd="5dp"
                        android:textSize="18sp"
                        android:layout_marginTop="25dp"
                        android:textColor="@color/white"
                        android:layout_marginStart="8dp"/>
                </LinearLayout>

            </LinearLayout>
            <TextView
                android:id="@+id/detayFilmKonu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Konusu"
                android:layout_marginEnd="5dp"
                android:textSize="20sp"
                android:layout_marginTop="20dp"
                android:textColor="@color/white"
                android:layout_marginStart="8dp"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/detayFilmKonusu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Konu"
                android:layout_marginEnd="5dp"
                android:textSize="16sp"
                android:layout_marginTop="20dp"
                android:textColor="@color/white"
                android:layout_marginStart="8dp"/>
            <TextView
                android:id="@+id/detayFilmOyuncu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Oyuncular"
                android:layout_marginEnd="5dp"
                android:textSize="20sp"
                android:layout_marginTop="20dp"
                android:textColor="@color/white"
                android:layout_marginStart="8dp"
                android:textStyle="bold" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/detayRecyler"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"/>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp">

                <Button
                    android:id="@+id/Fragman2"
                    android:layout_width="175dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:text="Fragman 2"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:ignore="MissingConstraints"
                    android:background="@drawable/button"
                    app:backgroundTint="@null"
                    android:textColor="@color/white"
                    />
                <Button
                    android:id="@+id/Fragman1"
                    android:layout_width="175dp"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="10dp"
                    android:text="Fragman 1"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:backgroundTint="@null"
                    tools:ignore="MissingConstraints"
                    android:background="@drawable/button"
                    android:textColor="@color/white" />

            </androidx.constraintlayout.widget.ConstraintLayout>


        </LinearLayout>
    </ScrollView>